# Sentiment Analyzer Pro Environment Configuration
# Copy this file to .env and customize values for your deployment

# Model Configuration
MODEL_PATH=models/sentiment_model.joblib
DEFAULT_MODEL_TYPE=naive_bayes

# Web Server Configuration
FLASK_ENV=development
FLASK_DEBUG=true
HOST=127.0.0.1
PORT=5000

# Data Paths
DATA_DIR=data
TRAINING_DATA=data/sample_reviews.csv
TEST_DATA=data/test_reviews.csv

# Transformer Model Configuration
TRANSFORMER_MODEL_NAME=distilbert-base-uncased
TRANSFORMER_CACHE_DIR=models/transformers_cache
MAX_SEQUENCE_LENGTH=128
BATCH_SIZE=16
LEARNING_RATE=2e-5
NUM_EPOCHS=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/sentiment_analyzer.log

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_TIMEOUT=30
MAX_TEXT_LENGTH=1000
MAX_FILE_SIZE_MB=100
MAX_DATASET_ROWS=1000000
ENABLE_CORS=true

# Database Configuration (if using database storage)
DATABASE_URL=sqlite:///sentiment_analyzer.db

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=8080
HEALTH_CHECK_INTERVAL=30

# Development Settings
DEBUG=false
TESTING=false
ENABLE_PROFILING=false

# External Service Configuration
SENTRY_DSN=
SLACK_WEBHOOK_URL=
DATADOG_API_KEY=

# Performance Configuration
WORKER_PROCESSES=4
WORKER_TIMEOUT=30
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Cache Configuration
CACHE_TYPE=simple
CACHE_TIMEOUT=300
REDIS_URL=redis://localhost:6379/0