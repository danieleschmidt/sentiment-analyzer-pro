# Sentiment Analyzer Pro - Environment Variables Template
# Copy this file to .env and fill in your specific values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Flask Application Settings
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=src.webapp:app

# Server Configuration
HOST=127.0.0.1
PORT=5000

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Default model path for CLI and API
MODEL_PATH=models/sentiment_model.joblib

# Model training configuration
DEFAULT_MODEL_TYPE=logistic_regression
MAX_FEATURES=10000
NGRAM_RANGE=1,2

# Transformer model settings (optional - requires torch/transformers)
TRANSFORMER_MODEL=distilbert-base-uncased
TRANSFORMER_MAX_LENGTH=128
TRANSFORMER_BATCH_SIZE=16
TRANSFORMER_EPOCHS=3
TRANSFORMER_LEARNING_RATE=2e-5

# =============================================================================
# DATA CONFIGURATION
# =============================================================================

# Data paths
DATA_DIR=data
MODELS_DIR=models
LOGS_DIR=logs

# Data processing settings
RANDOM_SEED=42
TEST_SIZE=0.2
VALIDATION_SPLIT=0.1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Configuration (for API authentication)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Structured logging format
LOG_FORMAT=json

# Log file configuration
LOG_FILE=logs/sentiment_analyzer.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Health check configuration
HEALTH_CHECK_TIMEOUT=30

# Metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090

# OpenTelemetry configuration (optional)
OTEL_SERVICE_NAME=sentiment-analyzer-pro
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Database configuration (if using external storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/sentiment_db

# Redis configuration (for caching)
# REDIS_URL=redis://localhost:6379/0

# Cloud storage (for model artifacts)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-model-bucket
# AWS_REGION=us-east-1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Testing configuration
PYTEST_ARGS=--verbose --cov=src --cov-report=html
TEST_DATA_SIZE=1000

# Development mode features
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_RELOAD=true

# Pre-commit hooks
SKIP_HOOKS=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production safety settings
# FLASK_ENV=production
# FLASK_DEBUG=0
# LOG_LEVEL=WARNING

# Security headers
# SECURE_SSL_REDIRECT=true
# SECURE_HSTS_SECONDS=31536000
# SECURE_CONTENT_TYPE_NOSNIFF=true
# SECURE_BROWSER_XSS_FILTER=true

# Performance tuning
# GUNICORN_WORKERS=4
# GUNICORN_TIMEOUT=30
# GUNICORN_MAX_REQUESTS=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles for experimental features
ENABLE_ASPECT_SENTIMENT=true
ENABLE_TRANSFORMER_MODELS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_WEB_INTERFACE=true

# Model serving options
ENABLE_MODEL_CACHING=true
MODEL_CACHE_SIZE=100
MODEL_CACHE_TTL=3600

# =============================================================================
# NOTES
# =============================================================================

# Important:
# 1. Never commit .env files to version control
# 2. Use strong, unique secrets in production
# 3. Rotate secrets regularly
# 4. Use environment-specific configurations
# 5. Validate all environment variables on startup