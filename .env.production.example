# Production Environment Configuration for Sentiment Analyzer

# Application Configuration
FLASK_ENV=production
LOG_LEVEL=INFO
WORKERS=4
WORKER_CONNECTIONS=1000

# Model Configuration
MODEL_PATH=/app/models/model.joblib

# Security Configuration
JWT_SECRET_KEY=your-secret-key-here-replace-in-production
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW=60
MAX_FILE_SIZE_MB=50
MAX_DATASET_ROWS=100000

# SSL Configuration (optional)
SSL_KEYFILE=/app/ssl/key.pem
SSL_CERTFILE=/app/ssl/cert.pem

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:password@db:5432/sentiment_db
REDIS_URL=redis://redis:6379/0

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ADMIN_PASSWORD=your-secure-password-here

# Third-party APIs (if needed)
OPENAI_API_KEY=your-openai-key-here
HUGGINGFACE_API_KEY=your-huggingface-key-here

# Compliance and Audit
GDPR_COMPLIANCE=true
AUDIT_LOGGING=true
DATA_RETENTION_DAYS=365

# Performance Tuning
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_REQUESTS=100
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Deployment Configuration
DOCKER_REGISTRY=sentiment-analyzer
VERSION=latest
ENVIRONMENT=production